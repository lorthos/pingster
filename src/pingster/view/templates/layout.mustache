<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}</title>
    <link href="/css/jquery-ui.min.css" rel="stylesheet" type="text/css">
    <link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="/css/main.css" rel="stylesheet" type="text/css">
    <link href="/css/bootstrap-responsive.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="/css/backgrid.css" />
  </head>
  <body>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
	<div class="container">
	  <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
	    <span class="icon-bar"></span>
	    <span class="icon-bar"></span>
	    <span class="icon-bar"></span>
	  </a>
	  <a class="brand">Pingster</a>
	  <div class="nav-collapse collapse">
	    <ol class="nav">
	      <li><a href="{{context-root}}/">Home</a></li>
	      {{#authenticated?}}
	      {{#nav-links}}
	      <li><a href="{{link}}">{{label}}</a></li>
	      {{/nav-links}}
	      {{/authenticated?}}
	    </ol>
	    {{#not-authenticated?}}
	    <a class="btn btn-inverse pull-right" href="{{context-root}}/login">Log in</a>
	    {{/not-authenticated?}}
	    {{#authenticated?}}
	    <div class="pull-right right-menu">
	      <span class="btn-group">
            <a class="btn btn-inverse" data-toggle="dropdown"  href="{{context-root}}/logout">
              <i class="icon-user icon-white"></i>
              <span style="margin: 0 5px;">Logout - {{user}}</span>
            </a>
	      </span>
	    </div>
	    {{/authenticated?}}
	  </div>
	</div>
      </div>
    </div>
    <div class="container" id="content">
      {{{body}}}
    </div>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.0/jquery.min.js"></script>
    <script src="http://ajax.cdnjs.com/ajax/libs/underscore.js/1.4.0/underscore-min.js"></script>
    <script src="http://ajax.cdnjs.com/ajax/libs/backbone.js/0.9.10/backbone-min.js"></script>
	<script src="/js/backgrid.min.js"></script>
	<script src="/js/backgrid.select-all.min.js"></script>
	<script src="/js/app.js" type="text/javascript"></script>
  </body>
</html>
